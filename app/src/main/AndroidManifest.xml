<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="elak.readinghood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/reading_hood_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComeFromActivity"
            android:noHistory="true"
            android:parentActivityName=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GivePassword"
            android:noHistory="true"
            android:parentActivityName=".ComeFromActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:parentActivityName=".StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewAnswerActivity"
            android:noHistory="true"
            android:parentActivityName=".ShowThreadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewsFeedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewThreadActivity"
            android:noHistory="true"
            android:parentActivityName=".NewsFeedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowThreadActivity"
            android:parentActivityName=".NewsFeedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:noHistory="true"
            android:parentActivityName=".StartActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>